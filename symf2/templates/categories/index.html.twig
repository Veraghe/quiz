{% extends 'base.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block body %}
<section class="jumbotron">
    <h1>Gestion des Categories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>LibelleCategorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.LibelleCategorie }}</td>
                <td>
                    <a href="{{ path('categories_show', {'id': category.id}) }}">voir</a>
                    <a href="{{ path('categories_edit', {'id': category.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categories_new') }}">Ajouter une catégorie</a>
    </section>
{% endblock %}
