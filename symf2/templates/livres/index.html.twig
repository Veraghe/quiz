{% extends 'base.html.twig' %}

{% block title %}Livres index{% endblock %}

{% block body %}
<section class="jumbotron">
    <h1>Gestion des Livres</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th> 
                <th>Catégorie</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.id }}</td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.auteur }}</td>
                <td>{{ livre.categorie }}</td>
                <td>{{ livre.description }}</td>
                <td class="text-center">
                    <a href="{{ path('livres_show', {'id': livre.id}) }}">voir</a>
                    <a href="{{ path('livres_edit', {'id': livre.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('livres_new') }}">Ajouter un livre</a>
    </section>
{% endblock %}
