{% extends 'base.html.twig' %}

{% block title %}Membres{% endblock %}

{% block body %}
<div class="centrer">
    <h1>Membres</h1>
    <table class="table ">
        <thead class="orange">
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Login</th>
                <th>Password</th>
                <th class="flexG">Email</th>
                <th class="flexP">Role</th>
                <th class="flexP">Score</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for membre in membres %}
            <tr>
                <td>{{ membre.nom }}</td>
                <td>{{ membre.prenom }}</td>
                <td>{{ membre.login }}</td>
                <td>{{ membre.password }}</td>
                <td class="flexG">{{ membre.email }}</td>
                <td class="flexP">{{ membre.role }}</td>
                <td class="flexP">{{ membre.score }}</td>
                <td>
                    <a href="{{ path('membre_show', {'id': membre.id}) }}"><i class="far fa-eye"></i></a>
                    <a href="{{ path('membre_edit', {'id': membre.id}) }}"><i class="far fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="centerbtn">
        <a href="{{ path('membre_new') }}" class="btn bleu">Ajouter</a>
        <a href="{{ path('admin') }}" class="btn orange">Retour</a>
    </div>
</div> 
{% endblock %}
