{% extends 'base.html.twig' %}

{% block title %}Membre{% endblock %}

{% block body %}
    <div class="center voir">
        <fieldset>
            <h1>Membre</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ membre.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ membre.nom }}</td>
                    </tr>
                    <tr>
                        <th>Prenom</th>
                        <td>{{ membre.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Login</th>
                        <td>{{ membre.login }}</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        <td>{{ membre.password }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ membre.email }}</td>
                    </tr>
                    <tr>
                        <th>Role</th>
                        <td>{{ membre.role }}</td>
                    </tr>
                    <tr>
                        <th>Score</th>
                        <td>{{ membre.score }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('membre_index') }}" class="btn orange">Retour</a>

            <a href="{{ path('membre_edit', {'id': membre.id}) }}" class="btn vert">Modifier</a>

            </fieldset>
    </div>
{% endblock %}
