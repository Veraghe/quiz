{% extends 'base.html.twig' %}

{% block title %}QuizImage{% endblock %}

{% block body %}
    <div class="center voir container">
        <fieldset>
            <h1>QuizImage</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ quiz_image.id }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td><img class="imageQuiz" src="{{ asset(quiz_image.image) }}" alt=""></td>
                    </tr>
                    <tr>
                        <th>Reponse</th>
                        <td>{{ quiz_image.reponseImage }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('quiz_image_index') }}"class="btn orange">Retour</a>

            <a href="{{ path('quiz_image_edit', {'id': quiz_image.id}) }}" class="btn vert">Modifier</a>

            {{ include('quiz_image/_delete_form.html.twig') }}
        </fieldset>
    </div>
{% endblock %}
