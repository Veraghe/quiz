{% extends 'base.html.twig' %}

{% block title %}Quiz Images{% endblock %}

{% block body %}
    <div class="container-quiz">
        <ul id="choises">
            <!-- pour la BDD, ajouter une boucle pour afficher toutes les images -->
            {% for quiz_image in quiz_images %}
            <li>
                <img class="imageQuiz" src="{{ asset(quiz_image.image) }}" id="{{quiz_image.id}}" alt="">
            </li>
           {% endfor %}
        </ul>
        {{ form_start(formQuizImage) }}
        <div class="quizImage">
            <div class="reponseImage" id="answers">
                <ul >
                    {% for key,  quiz_image in quiz_images_mélange %}
                        <div class="reponseQuizImage" >   
                            <p>{{quiz_image.reponseImage}} :</p>
                            <li id="{{key}}"></li>
                        </div>
                    {% endfor %}
                </ul> 
                
            </div>
        </div>
        {{ form_widget(formQuizImage) }}
     
    
     
        <!-- ajouter un bouton -->
        <div class="centerbtn">
            <button class="btn vert">{{ button_label|default('Valider') }}</button>
            {# <a href="{{ asset('home') }}" class="btn orange">Retour</a> #}
             
   
        </div>
        <!-- dans le controller : si, ils ont le même id c'est la bonne réponse -->
     {{ form_end(formQuizImage) }}
    </div>

    <div class="container-quiz_phone">
        </br>
        <p>Le quiz Image n'est pas disponible sur ce format d'écran. </p>
        </br>
        <p>Merci de votre compréhension</p>
    </div>
     


    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>
    <script src="{{ asset('js/drag&drop.js') }}"></script>   
{% endblock %}