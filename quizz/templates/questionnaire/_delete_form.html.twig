<form method="post" action="{{ path('questionnaire_delete', {'id': questionnaire.id}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer cet élément?');">
    <input type="hidden" name="_method" value="delete">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ questionnaire.id) }}">
    <button class="btn bleu">Supprimer</button>
</form>
