<form method="post" action="{{ path('anonyme_delete', {'id': anonyme.id}) }}" onsubmit="return confirm(''Êtes-vous sûr de bien vouloir supprimer cet élément?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ anonyme.id) }}">
    <button ><i class="fas fa-trash"></i></button>
</form>
