{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <div class="center voir container">
        <fieldset>
            <h1>Utilisateur</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ utilisateur.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ utilisateur.email }}</td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>{{ utilisateur.roles ? utilisateur.roles|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        <td class="scroll">{{ utilisateur.password }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('utilisateur_index') }}" class="btn orange">Retour</a>

            <a href="{{ path('utilisateur_edit', {'id': utilisateur.id}) }}" class="btn vert">Modifier</a>

            {{ include('utilisateur/_delete_form.html.twig') }}
        </fieldset>
    </div>
{% endblock %}
